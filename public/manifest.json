{
  "name": "OwnChart",
  "short_name": "OwnChart",
  "description": "Privacy-first, offline Gantt chart for project planning. Own your data.",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#0F6CBD",
  "orientation": "landscape",
  "icons": [
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-maskable-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "categories": ["productivity", "business"],
  "shortcuts": [
    {
      "name": "New Project",
      "short_name": "New",
      "description": "Create a new Gantt chart",
      "url": "/?action=new",
      "icons": [{"src": "/icons/icon-192x192.png", "sizes": "192x192"}]
    }
  ],
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "application/octet-stream": [".ownchart"]
      },
      "name": "OwnChart Project",
      "icons": [
        { "src": "/icons/favicon-16x16.png", "sizes": "16x16", "type": "image/png" },
        { "src": "/icons/favicon-32x32.png", "sizes": "32x32", "type": "image/png" },
        { "src": "/icons/favicon-48x48.png", "sizes": "48x48", "type": "image/png" },
        { "src": "/icons/icon-192x192.png", "sizes": "192x192", "type": "image/png" },
        { "src": "/icons/icon-512x512.png", "sizes": "512x512", "type": "image/png" }
      ]
    }
  ]
}
